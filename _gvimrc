set guifont=Courier_New:h16:cANSI
:imap jk <Esc>
set number

"configure Vim to load plugins
set nocompatible
filetype plugin on
runtime macros/matchit.vim

"set autocomplete
set wildmode=longest,list

"Delete forwards a word
:imap <C-d> <C-]>diwi
"indenting
"show exisitng tab with 2 spaces width
set tabstop=2
"when indenting with '>', use 2 spaces widht
set shiftwidth=2
"on pressing tab, insert 2 spaces
set expandtab
"disable octal on <C-a> and <C-x>
set nrformats-=octal

"open/reload vim
nnoremap <leader>ev : split $MYVIMRC<CR>
nnoremap <leader>sv : source $MYVIMRC<CR>

"%:h when editing files
cnoremap <expr> %% getcmdtype() == ':' ? expand('%:h').'/' : '%%'

nnoremap k gk
nnoremap gk k
nnoremap j gj
nnoremap gj j
